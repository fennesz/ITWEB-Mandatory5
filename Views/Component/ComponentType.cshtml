@model IEnumerable<ITWEB_Mandatory5.ViewModels.ComponentVM>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Component list for component type: " + ViewBag.ComponentTypeName;
}

<h1>@ViewData["Title"]</h1>
<div class="container">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ComponentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComponentNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SerialNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdminComment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserComment)
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ComponentType.ComponentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ComponentNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SerialNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdminComment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserComment)
                </td>
                <td>
                    <a asp-controller="Component" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default">Edit</a>
                    <a asp-controller="Component" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-default">Delete</a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="7" align="right">
                <a asp-controller="Component" asp-action="Create" class="btn btn-default">Create</a>
            </td>
        </tr>
    </table>
</div>