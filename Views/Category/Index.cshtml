@model IEnumerable<ITWEB_Mandatory5.ViewModels.CategoryVM>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Category list";
}
<div class="container">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => "Component Type Count")
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ComponentTypes.Count())
                </td>
                <td>
                    <button type="button" asp-controller="Component" asp-action="edit" class="btn btn-default">Edit</button>
                </td>
            </tr>
        }
    </table>
</div>