@model IEnumerable<ITWEB_Mandatory5.ViewModels.ComponentTypeVM>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Component type list for category: " + ViewBag.CategoryName;
}

<h1>@ViewData["Title"]</h1>
<div class="container">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ComponentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComponentInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datasheet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WikiLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdminComment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories)
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ComponentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ComponentInfo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Datasheet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manufacturer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WikiLink)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdminComment)
                </td>
                <td>
                    @foreach (var category in item.Categories)
                    {
                        @category.Name
                        <br/>
                    }
                </td>
                <td>
                    <a asp-controller="ComponentType" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default">Edit</a>
                    <a asp-controller="ComponentType" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-default">Delete</a>
                    <a asp-controller="Component" asp-action="ComponentType" asp-route-id="@item.Id" class="btn btn-default">Components</a>
                </td>
            </tr>
        }
    </table>
</div>